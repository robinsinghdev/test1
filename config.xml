<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bpmetrics.trackerv2" 
version="2.0.5"
versionCode ="5" 
xmlns="http://www.w3.org/ns/widgets" 
xmlns:gap   = "http://phonegap.com/ns/1.0" 
xmlns:cdv="http://cordova.apache.org/ns/1.0">
     <name>BP Metrics v2</name> 
    <description> 
        BP Metrics v2, Application for time tracking offline and online.
    </description>
    <author email="hdekkers@dynaread.com" href="https://www.bpmetrics.com/">
        Hans Dekkers
    </author>
    
    <content src="index.html" />
    
    <preference name="permissions" value="none"/>

    <!-- Enabling individual permissions -->
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
    <feature name="http://api.phonegap.com/1.0/device"/>
    
    <plugin name="cordova-plugin-whitelist" spec="1.3.0" source="npm" />
	<plugin name="cordova-plugin-network-information" source="npm" spec="1.3.0" />
	<plugin name="cordova-sqlite-evcore-extbuild-free" source="npm" spec="0.8.2" />
	<plugin name="cordova-plugin-dialogs" source="npm" spec="1.3.0" />
	<plugin name="cordova-plugin-app-version" source="npm" spec="0.1.9" />
	<plugin name="cordova-launch-review" source="npm" spec="1.0.3"/>
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <icon src="res/app_icon.png"/>
    
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="14"/> 
 		<preference name="android-targetSdkVersion" value="22"/> 
 		
 		<!-- Icons By Resolutions -->
 		<icon src="res/android/app_icon_ldpi.png" platform="android" qualifier="ldpi" />
        <icon src="res/android/app_icon_mdpi.png" platform="android" qualifier="mdpi" />
        <icon src="res/android/app_icon_hdpi.png" platform="android" qualifier="hdpi" />
        <icon src="res/android/app_icon_xhdpi.png" platform="android" qualifier="xhdpi" />
    </platform>
    <!-- 
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
     -->
</widget>
