<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bpmetrics.tracker" 
version="1.6.1"
versionCode = "9" 
xmlns="http://www.w3.org/ns/widgets" 
xmlns:gap   = "http://phonegap.com/ns/1.0" 
xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BP Metrics</name>
    <description>
        BP Metrics Application for time tracking offline and online.
    </description>
    <author email="hdekkers@dynaread.com" href="https://bpmetrics.com/">
        Hans Dekkers
    </author>
    
    <content src="index.html" />
    
    <preference name="permissions" value="none"/>

    <!-- Enabling individual permissions -->
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
    <feature name="http://api.phonegap.com/1.0/device"/>
    
     <!--    Phonegap Cloud Build Plugin Defination -->
     <!-- 
